
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
<form action="/Home/SaveChanges" method="post">
    <input type="hidden" name="itemid" value="@ViewBag.UsertoEdit.email" />
    <label>First Name</label><input type="text" name="firstname" class="form-control" />
    <label>Last Name</label><input type="text" name="lastname" class="form-control"/>
    <label>Email</label><input type="email" name="email" class="form-control" value="@ViewBag.UsertoEdit.email" />
    <label>Password</label><input type="password" name="password" class="form-control" value="@ViewBag.UsertoEdit.firstname" />
    <input type="submit" value="Save!" class="form-control" />

</form>
